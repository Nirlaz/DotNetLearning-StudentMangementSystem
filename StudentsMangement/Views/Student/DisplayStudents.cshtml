@model List<StudentsMangement.Models.Entitles.Student>


<div class="container mt-5">
    <h1 class="text-center">List of Books</h1>
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>ID</th>
                <th>Student Name</th>
                <th>Gender</th>
                <th>Grade</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Gender</td>
                    <td>@student.Grade</td>
                    <td>
                        <a asp-controller="Student" asp-action="Delete" asp-route-Id="@student.Id" class="btn btn-danger">Delete</a>
                        <a asp-controller="Student" asp-action="Edit" asp-route-Id="@student.Id"  class="btn btn-secondary">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
        <tbody>
            {
            <form action="/Student/AddStudent" method="post">
            <tr>
                <td> <label for="ID">Id</label></td>
                <td>
                    <label for="Name"></label>
         
                    <input type="text" id="Name" name="Name" placeholder="Student Name" required><br><br>
                </td>
                <td>
                    <label for="Gender"></label>
                
                    <input type="text" id="Gender" name="Gender" placeholder="Gender" required><br><br>
                </td>
                <td>
                    <label for="Grade"></label>
                
                    <input type="text" id="Grade" name="Grade" placeholder="Grade" required><br><br>
                </td>
                <td>
                    <center> <button class="btn btn-success" type="submit" asp-controller="Student">ADD</button></center>
                </td>
            </tr>
            </form>

            }
        </tbody>
    </table>
</div>